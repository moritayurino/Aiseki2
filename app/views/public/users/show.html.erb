  <h3><%= @user.name %></h3>
    <% if @user == current_user %>
      <p><%= link_to "プロフィール編集", edit_user_path %></p>
    <% end %>
  <h2>投稿一覧</h2>
    <table class="table table-striped">

      <thead>
        <tr>
          <th>ジャンル</th>
          <th>タイトル</th>
          <th>場所</th>
          <th>投稿日時</th>
          <th colspan="2"></th>
        </tr>
      </thead>
      <% @posts.each do |post| %>
        <% if post.user %>
      <tbody>
        <tr>
          <td><%= post.genre.name %></td>
          <td><%= link_to post.title, "/posts/#{post.id}" %></td>
          <td><%= post.address %></td>
          <td><%= post.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
          <td><%= post.likes.count %>相席</td>
          <td><%= post.comments.count %>コメント</td>
        <% end %>
      <% end %>
        </tr>
      </tbody>
    </table>