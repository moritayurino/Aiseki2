
<%= form_with url:searchs_path, method: :get do |f| %>
  <%= f.text_field :word, rows: '5', placeholder: "検索したいものをここに" %>
  <%= f.select :model, [["  ユーザー",1],["投稿内容",2]], {prompt: "検索したいものを選択"}, :class => 'form-control' %>
  <%= f.select :genre, [["相席","相席"],["スポーツ","スポーツ"],["コンサート","コンサート"]], {prompt: "ジャンルを選択"}, :class => 'form-control' %>
  <%= f.submit "検索する" %>
<% end %>
<% if @select == "1"%>
  <% @searchs.each do |user|%>
    <%= link_to user.name, user_path(user.id) %>
    <br>
  <% end %>
<% elsif @select == "2"%>
  <% @searchs.each do |post| %>
    <%= link_to post.body, post_path(post.id)%>
    <br>
  <%end %>
<% elsif @genre %>
<% @searchs.each do |post| %>
    <%= link_to post.body, post_path(post.id)%>
    <br>
  <%end %>
<% end %>