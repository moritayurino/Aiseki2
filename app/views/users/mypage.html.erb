<h1>投稿一覧</h1>

<% @posts.each do |post| %>

  <p>タイトル</p>
  <span>
    <%= link_to post.title, "/posts/#{post.id}" %>
  </span>
  <p>内容</p>
  <span><%= post.body %></span>
  <p>ユーザーネーム：<%= post.user.name %></p>
  <p>投稿日時：<%= post.created_at.strftime('%Y/%m/%d') %></p>
    <p><%= link_to "#{post.likes.count} 相席", post_path(post.id) %></p>
    <p><%= link_to "#{post.comments.count} コメント", post_path(post.id) %></p>
  
<% end %>