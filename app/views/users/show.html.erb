<div>
  <h3><%= @user.name %></h3>
  <p><%= link_to "プロフィール編集", edit_user_path %></p>
</div>

<% @posts.each do |post| %>
<div>
  <%= link_to post_path(post.id) do %>
  <% end %>
  <p>タイトル：<%= post.title %></p>
  <p>内容：<%= post.body %></p>
  <p>ユーザーネーム：<%= post.user.name %></p>
  <p><%= link_to "#{post.comments.count} コメント", post_path(post.id) %></p>
</div>
<% end %>