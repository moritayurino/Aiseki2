<div class="card-list-container py-5">
<div class="card w-50 mx-auto mt-4 shadow-lg">
<div class="card-body">
<div class="row">
<div class="col-2">
</div>
<div class="col-10">
  <p class="card-title"><div>
  <span><b>ジャンル</b></span>
  <p><%= @post.genre.name %></p>
  <span><b>タイトル</b></span>
  <p><%= @post.title %></p>

  <span><b>内容</b></span>
  <p><%= @post.body %></p>
  <span><%= link_to @post.user.name, admin_user_path(@post.user.id) %></span>
  <p>投稿日時：<%= @post.created_at.strftime('%Y/%m/%d %H:%M:%S') %></p>
  <p><i class="fa-solid fa-flag"></i><%= @post.address %></p>

  <% if admin_signed_in? || current_user.id == @post.user.id %>
  <%= link_to "削除", admin_post_path(@post), method: :delete, data: {confirm: "本当に削除しますか？"} %>
  <% end %>
</div>
相席：<%= @post.likes.count %>
<div>

</div>

<div>
  <p>コメント件数：<%= @post.comments.count %></p>
  <% @post.comments.each do |comment| %>
  <%= comment.user.name %>
  <%= comment.created_at.strftime('%Y/%m/%d %H:%M:%S') %><%= comment.comment %>
<% if admin_signed_in? || current_user == comment.user %>
  <%= link_to "削除", admin_post_comment_path(comment.post, comment), method: :delete, data: {confirm: "本当に削除しますか？"} %>
  <% end %>
  <% end %>
</div>

</div>
</div>
</div>
</div>