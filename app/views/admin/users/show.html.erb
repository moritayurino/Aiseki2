
  <h3><%= @user.name %></h3>

<h2>投稿一覧</h2>
<table class="table table-striped">

  <thead>
    <tr>
    <th>ジャンル</th>
    <th>タイトル</th>
    <tH>場所</th>
    <th>投稿日時</th>
    <th colspan="2"></th>
  </tr>
  </thead>
<% @posts.each do |post| %>
<tbody>
      <tr>
  <td><%= post.genre.name %></td>
  <td><%= link_to post.title, admin_post_path(post.id) %></td>
  <td><%= post.address %></td>
  <td><%= post.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
    <td><%= post.likes.count %>相席</td>
    <td><%= post.comments.count %>コメント</td>
<% end %>
</tr>
</tbody>
</table>
<% if admin_signed_in? || current_user.id == @user.id %>
<%= link_to "退会",admin_user_path, class: "destroy-user", method: :delete, "data-confirm" => "本当に退会しますか？" %>
<% end %>